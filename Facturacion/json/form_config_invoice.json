{
  "tabs": [
    {
      "id": "basic_information",
      "label": "Información básica",
      "type": "form",
      "className": "row",
      "groups": [
        {
          "className": "col-md-6",
          "fields": [
            {
              "id": "document_type",
              "type": "select",
              "label": "Tipo de comprobante",
              "options": [
                {
                  "value": "1",
                  "label": "FV - 1 Factura de venta #1"
                },
                {
                  "value": "2",
                  "label": "FV - 2 Factura electronica de venta"
                }
              ],
              "className": "mb-3",
              "inputClassName": "form-select",
              "required": true
            },
            {
              "id": "number_invoice",
              "type": "text",
              "label": "Número de factura",
              "className": "mb-3",
              "inputClassName": "form-control",
              "required": true
            },
            {
              "id": "client",
              "type": "select",
              "label": "Cliente",
              "options": [
                {
                  "value": "1",
                  "label": "Javier Antonio Moreno"
                },
                {
                  "value": "2",
                  "label": "Jefferson Zambrano Ruiz"
                }
              ],
              "className": "mb-3",
              "inputClassName": "form-select",
              "required": true
            },
            {
              "id": "contact",
              "type": "select",
              "label": "Destinatario (contacto)",
              "options": [
                {
                  "value": "1",
                  "label": "Javier Antonio Moreno"
                }
              ],
              "className": "mb-3",
              "inputClassName": "form-select",
              "required": true
            }
          ]
        },
        {
          "className": "col-md-6",
          "fields": [
            {
              "id": "seller",
              "type": "select",
              "label": "Vendedor",
              "options": [
                {
                  "value": "1",
                  "label": "Javier Antonio Moreno"
                }
              ],
              "className": "mb-3",
              "inputClassName": "form-select",
              "required": true
            },
            {
              "id": "cost_center",
              "type": "select",
              "label": "Centro de costo",
              "options": [
                {
                  "value": "1",
                  "label": "Administración"
                },
                {
                  "value": "2",
                  "label": "Productopolis"
                }
              ],
              "className": "mb-3",
              "inputClassName": "form-select",
              "required": true
            },
            {
              "id": "date_elaboration",
              "type": "date",
              "label": "Fecha de elaboración",
              "format": "date",
              "className": "mb-3",
              "inputClassName": "form-control",
              "required": true
            }
          ]
        }
      ]
    },
    {
      "id": "invoice_information",
      "label": "Información de facturación",
      "type": "table",
      "className": "col-12 row",
      "dataList": "{\"valueNames\":[\"medio_pago\",\"numero_autorizacion\",\"valor_total\"],\"page\":5,\"pagination\":true}",
      "fields": [
        {
          "id": "product",
          "type": "select",
          "label": "Producto",
          "options": [
            {
              "value": "1",
              "label": "Producto 1"
            },
            {
              "value": "2",
              "label": "Producto 2"
            },
            {
              "value": "3",
              "label": "Producto 3"
            }
          ],
          "inputClassName": "form-select",
          "className": "align-middle ps-3",
          "required": true
        },
        {
          "id": "description",
          "type": "text",
          "label": "Descripción",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        },
        {
          "id": "quantity",
          "type": "number",
          "label": "Cantidad",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        },
        {
          "id": "value_unit",
          "type": "number",
          "label": "Valor Unitario",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        },
        {
          "id": "discount",
          "type": "number",
          "label": "Descuento",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        },
        {
          "id": "tax",
          "type": "number",
          "label": "Impuesto Cargo",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        },
        {
          "id": "tax_retention",
          "type": "number",
          "label": "Impuesto Retención",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        },
        {
          "id": "value_full",
          "type": "number",
          "label": "Valor Total",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        }
      ]
    },
    {
      "id": "payment_methods",
      "label": "Métodos de pago",
      "type": "table",
      "className": "col-12 row",
      "fields": [
        {
          "id": "payment_method",
          "type": "select",
          "label": "Seleccione medio de pago",
          "options": [
            {
              "value": "1",
              "label": "Nequi"
            },
            {
              "value": "2",
              "label": "Efectivo"
            },
            {
              "value": "3",
              "label": "Banco Caja Social"
            }
          ],
          "inputClassName": "form-select",
          "className": "align-middle ps-3",
          "required": true
        },
        {
          "id": "number_authorization",
          "type": "number",
          "label": "Número de autorización",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        },
        {
          "id": "value",
          "type": "number",
          "label": "Valor Total",
          "inputClassName": "form-control",
          "className": "align-middle",
          "required": true
        }
      ]
    }
  ]
}
