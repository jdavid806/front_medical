{
  "form1": {
    "tabs": [
      {
        "tab": "Información de la Consulta",
        "card": [
          {
            "title": "Motivo de la consulta",
            "class": "col-12",
            "fields": [
              {
                "id": "motivoConsulta",
                "label": "",
                "type": "textarea",
                "name": "motivoConsulta"
              }
            ]
          }
        ],
        "card2": [
          {
            "title": "Contexto de los sintomas/Enfermedad actual",
            "fields": [
              {
                "id": "contextoSintoma",
                "label": "",
                "type": "textarea",
                "name": "contextoSintoma"
              }
            ]
          }
        ],
        "card3": [
          {
            "title": "¿Qué ha tomado?",
            "fields": [
              {
                "id": "haTomado",
                "label": "",
                "type": "textarea",
                "name": "haTomado"
              }
            ]
          }
        ]
      },
      {
        "tab": "Tratamiento",
        "card": [
          {
            "title": "Procedimiento",
            "class": "col-12",
            "fields": [
              {
                "id": "procedimiento",
                "label": "Selecciona el procedimiento",
                "type": "select",
                "name": "procedimiento",
                "options": [
                  {
                    "value": "extensionPestanas",
                    "text": "Extensión de pestañas"
                  },
                  {
                    "value": "liftingPestanas",
                    "text": "Lifting de pestañas"
                  }
                ]
              }
            ]
          }
        ],
        "card2": [
          {
            "title": "Información Adicional",
            "class": "col-12",
            "fields": [
              {
                "id": "ladoDuerme",
                "label": "¿De qué lado duerme?",
                "type": "select",
                "name": "ladoDuerme",
                "options": [
                  {
                    "value": "izquierdo",
                    "text": "Izquierdo"
                  },
                  {
                    "value": "derecho",
                    "text": "Derecho"
                  }
                ]
              },
              {
                "id": "realizaDeportes",
                "label": "¿Realiza deportes?",
                "type": "checkbox",
                "name": "realizaDeportes",
                "class": "col-6",
                "toggleFields": [
                  {
                    "id": "frecuenciaDeportes",
                    "label": "¿Con qué frecuencia?",
                    "type": "textarea",
                    "placeholder": "",
                    "name": "frecuenciaDeportes"
                  }
                ]
              },
              {
                "id": "embarazoLactancia",
                "label": "¿Estás embarazada o dando de lactar?",
                "type": "checkbox",
                "name": "embarazoLactancia",
                "class": "col-6"
              },
              {
                "id": "trabajaEnCalor",
                "label": "¿Trabaja en área de calor?",
                "type": "checkbox",
                "name": "trabajaEnCalor",
                "class": "col-6"
              },
              {
                "id": "intervencionOcular",
                "label": "¿Te has sometido a una intervención médica en el ocular?",
                "type": "checkbox",
                "name": "intervencionOcular",
                "class": "col-6"
              }
            ]
          }
        ],
        "card3": [
          {
            "title": "Pestañas",
            "class": "col-12",
            "fields": [
              {
                "id": "curvaturaPestanas",
                "label": "Curvatura de Pestañas/Goma",
                "type": "textarea",
                "name": "curvaturaPestanas",
                "class": "col-6"
              },
              {
                "id": "tamanoPestanas",
                "label": "Tamaño",
                "type": "textarea",
                "name": "tamanoPestanas",
                "class": "col-6"
              },
              {
                "id": "grosorPestanas",
                "label": "Grosor",
                "type": "textarea",
                "name": "grosorPestanas",
                "class": "col-6"
              },
              {
                "id": "disenoRealizado",
                "label": "Diseño Realizado",
                "type": "textarea",
                "name": "disenoRealizado",
                "class": "col-6"
              },
              {
                "id": "notaPestanas",
                "label": "Nota",
                "type": "textarea",
                "name": "notaPestanas",
                "class": "col-12"
              }
